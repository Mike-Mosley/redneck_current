#login
  = form_for(:user, :url => {:action => 'login'}) do |f|
    #login_info
      = f.label "Email Address"
      = f.email_field :username
      = f.label :password
      = f.password_field :password
    #login_options
      = f.label "Remember Me?"
      = f.check_box "remember_me"
      = f.submit "Sign in"