#registration
  = render :partial => 'tabs'
  #registration_table{:style => "max-width:700px"}
    #settings
      = form_for(@image, :url => {:action => 'save_background_picture'}, :html => { :multipart => true }) do |f|
        = f.error_messages
        %table#table_settings
          %tbody
            %tr
              %th Upload Desired Profile Picture
              %td= f.file_field :name
        = f.submit 'Set Background Picture'
