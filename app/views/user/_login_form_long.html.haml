#login_long
  = form_for(:user, :url => {:action => 'login'}) do |f|
    #login_info
      = f.label :username
      = f.email_field :username
      %br
      = f.label :password
      = f.password_field :password
    #login_options
      = f.label "Remember Me?"
      = f.check_box "remember_me"
      = f.submit "Sign in"
    #forgotful
      = link_to 'Forgot Password', :action => 'request_password_reset_form'