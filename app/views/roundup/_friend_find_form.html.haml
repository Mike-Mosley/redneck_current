%p Find New Buds by Entering Name or Email Address
= text_field_tag :data, nil, :size => 40
:javascript
  $("#data").live("keyup", function() {
    $.post("/roundup/find_friends", { data: $('#data').val() }, function(html) {
      $("#borrower_netid_message").html(html);
    });
  });
